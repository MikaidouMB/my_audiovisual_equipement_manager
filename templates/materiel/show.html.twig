{% extends 'base.html.twig' %}

{% block title %}Materiel{% endblock %}

{% block body %}
    <h1>Materiel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ materiel.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ materiel.nom }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ materiel.type }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ materiel.marque }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ materiel.description }}</td>
            </tr>
            <tr>
                <th>PrixLocation</th>
                <td>{{ materiel.prixLocation }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ materiel.statut }}</td>
            </tr>
            <tr>
                <th>DateAchat</th>
                <td>{{ materiel.dateAchat ? materiel.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ materiel.image.ref }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-center align-items-center my-4">  
        <a href="{{ path('app_materiel_index') }}" class="btn btn-primary mr-3">Retour Ã  la liste</a>
        <a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}" class="btn btn-warning mr-3">Editer</a>
        <div class="ml-3">
            {{ include('materiel/_delete_form.html.twig') }}
        </div>
    </div>


{% endblock %}
