{% extends 'base.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
<h1>Liste des réservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Nom du client</th>
            <th>Statut du devis</th>
            <th>Accéder au devis/facture</th>
        </tr>
    </thead>
    <tbody>
        {% for reservation in reservations %}
        <tr>
            <td>{{ reservation.createdAt|date('d/m/Y H:i:s') }}</td>
            <td>{{ reservation.user.prenom }} {{ reservation.user.nom }}</td>
            <td>
                {% if reservation.isValidated is not same as (true) %}
                    Non validé
                {% else %}
                    Validé
                {% endif %}
            </td>
            <td>
                <a href="{{ path('admin_app_devis_details', {'orderId': reservation.id}) }}" class="btn btn-primary">Voir le devis/facture</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
